format-muted-prefix = " "
format-muted-foreground = ${root.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${root.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98
time-format = %H:%M

format-full-prefix = " "
format-full-prefix-foreground = ${root.foreground-alt}
format-full-underline = #0f0

label-discharging = %time% (%consumption% W)
format-discharging = <ramp-capacity> <label-discharging>
;format-discharging-underline = ${ramp-capacity-foreground}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

ramp-capacity-0-foreground = #f00
ramp-capacity-1-foreground = #f70
ramp-capacity-2-foreground = #ff0
ramp-capacity-3-foreground = #7f0
ramp-capacity-4-foreground = #0f0

ramp-capacity-0-underline = ${self.ramp-capacity-0-foreground}
ramp-capacity-1-underline = ${self.ramp-capacity-1-foreground}
ramp-capacity-2-underline = ${self.ramp-capacity-2-foreground}
ramp-capacity-3-underline = ${self.ramp-capacity-3-foreground}
ramp-capacity-4-underline = ${self.ramp-capacity-4-foreground}

format-charging = <animation-charging> <label-charging>
format-charging-foreground = #88f
format-charging-underline = ${self.format-charging-foreground}
animation-charging-foreground = ${self.format-charging-underline}
animation-charging-framerate = 750
animation-charging-0 = ${self.ramp-capacity-0}
animation-charging-1 = ${self.ramp-capacity-1}
animation-charging-2 = ${self.ramp-capacity-2}
animation-charging-3 = ${self.ramp-capacity-3}
animation-charging-4 = ${self.ramp-capacity-4}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
;format-underline = #f50a4d
;format-overline = ${self.format-underline}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${root.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${root.foreground-alt}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${root.secondary}
label-close =  cancel
label-close-foreground = ${root.secondary}
label-separator = |
label-separator-foreground = ${root.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/pulseaudio-tail]
type = custom/script
exec = ~/.config/polybar/scripts/pulseaudio-tail.sh
tail = true
click-right = exec pavucontrol &
click-left = ~/.config/polybar/scripts/pulseaudio-tail.sh --mute
scroll-up = ~/.config/polybar/scripts/pulseaudio-tail.sh --up
scroll-down = ~/.config/polybar/scripts/pulseaudio-tail.sh --down

[module/system-usb-udev]
type = custom/script
exec = ~/.config/polybar/scripts/system-usb-udev.sh
tail = true
click-left = ~/.config/polybar/scripts/system-usb-udev.sh --mount
click-right = ~/.config/polybar/scripts/system-usb-udev.sh --unmount

[module/updates-arch-combined]
type = custom/script
exec = ~/.config/polybar/scripts/updates-arch-combined.sh
interval = 600
click-left = ~/.config/polybar/scripts/updates-arch-combined.sh --gui

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

