#! /bin/sh

sxhkd &
~/.screenlayout/$(hostname).sh
~/.config/polybar/launch.sh main &
megasync &
telegram-desktop -startintray &
nm-applet &
blueman-applet &
xscreensaver &

# dunst -config $dunst_path/dunstrc \
#                                   -lb "$bgcolor" \
#                                   -nb "$bgcolor" \
#                                   -cb "$bgcolor" \
#                                   -lf "$fgcolor" \
#                                   -bf "fgcolor" \
#                                   -cf "$fgcolor" \
#                                   -nf "$fgcolor" \
#                                   -frame_color "$fgcolor"

if [ $(hostname) == 'dodo-pc' -o $(hostname) == 'dodo-brix' ]; then
    bspc monitor -d 1 2 3 4 5 6 7 8 9
elif [[ $(hostname) == 'dodo-laptop' ]]; then
    bspc monitor HDMI1 -d 1 2 3 4
    bspc monitor eDP1 -d 5 6 7 8
fi

bspc config border_width         2
bspc config window_gap           2

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

