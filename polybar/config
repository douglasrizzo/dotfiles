; here I set global bar parameters
[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 16
offset-x = 0
offset-y = 0
; radius = 6.0
; fixed-center = false
bottom = true

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

border-left-size  = 0
border-right-size = 0

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-1 = Noto Sans:pixelsize=9;1
font-2 = Font Awesome 5 Free:pixelsize=9;2
font-3 = Font Awesome 5 Free Solid:pixelsize=9;2
font-4 = Font Awesome 5 Brands:pixelsize=9;2

modules-left   = bspwm filesystem memory cpu
modules-center = xwindow
modules-right  = battery date

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

; Tray icon max size
tray-maxsize = 24

wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

foreground = ${xrdb:color3}
background = ${xrdb:color0}
foreground-alt = ${xrdb:color2}
background-alt = ${xrdb:color3}
primary = ${xrdb:color4}
secondary = ${xrdb:color5}
alert = ${xrdb:color6}
font-0 = monospace:pixelsize=9;1
i3-label-focused-padding = 2
i3-label-unfocused-padding = 1

[module/xwindow]
type = internal/xwindow

format = <label>
format-background = ${root.background}
format-foreground = ${root.foreground}
format-padding = 0
;format-underline = ${root.foreground}
;format-overline = ${self.format-underline}

label = %title%
label-maxlen = 50

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${root.foreground-alt}
format-prefix-underline = ${root.secondary}

label-layout = %layout%
label-layout-underline = ${root.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${root.secondary}
label-indicator-underline = ${root.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =  %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${root.foreground-alt}

;format-underline = #f90000
;format-overline = ${self.format-underline}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${root.primary}
label-focused-foreground = ${root.background}
label-focused-underline = ${root.foreground}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${root.alert}
label-urgent-padding = 1

label-empty = 
label-empty-foreground = ${root.foreground-alt}
label-empty-padding = 1

[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = false

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = true

; Set the scroll cycle direction 
; Default: true
reverse-scroll = true

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
;fuzzy-match = true

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-foreground = #000
label-mode-background = ${root.primary}
label-mode-padding = ${root.i3-label-focused-padding}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %index%
label-focused-foreground = ${root.background}
label-focused-background = ${root.primary}
label-focused-underline = ${root.foreground}
label-focused-padding = ${root.i3-label-focused-padding}

label-unfocused = %index%
label-unfocused-padding = ${root.i3-label-unfocused-padding}

label-visible = %index%
label-visible-underline = #555555
label-visible-padding = ${root.i3-label-unfocused-padding}

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = ${root.i3-label-unfocused-padding}

; Separator in between workspaces
;label-separator = |
label-separator-padding = 1
label-separator-foreground = ${root.foreground}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

