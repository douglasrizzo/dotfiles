bar-empty-foreground = ${root.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${root.foreground-alt}
;format-underline = #f90000
;format-overline = ${self.format-underline}
label = : %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${root.foreground-alt}
;format-underline = #4bffdc
;format-overline = ${self.format-underline}
label = : %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp6s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${root.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${root.foreground-alt}

[module/eth]
type = internal/network
interface = enp7s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${root.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${root.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = %d-%m
date-alt = %Y-%m-%d

time = %H:%M
time-alt = %H:%M:%S

format-prefix = ": "
format-prefix-foreground = ${root.foreground}
;format-underline = #0a6cf5
;format-overline = ${self.format-underline}

label = %date% %time%

[module/volume]
type = internal/volume

