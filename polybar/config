; here I set global bar parameters
[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 2%
offset-x = 0
offset-y = 0
; radius = 6.0
; fixed-center = false

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

border-left-size  = 0
border-right-size = 0

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Lexend Deca:pixelsize=11;2
font-1 = Noto Sans Mono:style=Regular:pixelsize=11;0
font-2 = Font Awesome 5 Free:pixelsize=10;2
font-3 = Font Awesome 5 Free Solid:pixelsize=10;2
font-4 = Font Awesome 5 Brands:pixelsize=10;2

separator=~

wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

i3-label-focused-padding = 2
i3-label-unfocused-padding = 1

; Tray icon max size
tray-maxsize = 24
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

[bar/single]
inherit = bar/main
modules-left = bspwm filesystem_tiny memory_tiny cpu
modules-center = xwindow
modules-right = temperature battery date
bottom = true
tray-position = right

[bar/bottom]
inherit = bar/main
modules-left = filesystem_big memory_big cpu 
modules-right = battery temperature
bottom = true
tray-position = right

[bar/top]
inherit = bar/main
modules-left = bspwm
modules-center = xwindow
modules-right = date
bottom = false

[module/xwindow]
type = internal/xwindow

format = <label>
format-background = ${root.background}
format-foreground = ${root.foreground}
format-padding = 0
;format-underline = ${root.foreground}
;format-overline = ${self.format-underline}

label = %title%
label-maxlen = 50

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${root.foreground-alt}
format-prefix-underline = ${root.secondary}

label-layout = %layout%
label-layout-underline = ${root.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${root.secondary}
label-indicator-underline = ${root.secondary}

[module/filesystem_base]
type = internal/fs
interval = 10

label-mounted =  %{F#0a81f5}%mountpoint%%{F-}:%percentage_used%%
label-unmounted =
label-unmounted-foreground = ${root.foreground-alt}

[module/filesystem_tiny]
inherit = module/filesystem_base
mount-0 = /home

[module/filesystem_big]
inherit = module/filesystem_base
mount-0 = /
mount-1 = /home

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${root.primary}
label-focused-foreground = ${root.background}
label-focused-underline = ${root.foreground}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${root.alert}
label-urgent-padding = 1

label-empty = 
label-empty-foreground = ${root.foreground-alt}
label-empty-padding = 1

[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = false

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = true

; Set the scroll cycle direction 
; Default: true
reverse-scroll = true

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
;fuzzy-match = true

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-foreground = #000
label-mode-background = ${root.primary}
label-mode-padding = ${root.i3-label-focused-padding}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %index%
label-focused-foreground = ${root.background}
label-focused-background = ${root.primary}
label-focused-underline = ${root.foreground}
label-focused-padding = ${root.i3-label-focused-padding}

label-unfocused = %index%
label-unfocused-padding = ${root.i3-label-unfocused-padding}

label-visible = %index%
label-visible-underline = #555555
label-visible-padding = ${root.i3-label-unfocused-padding}

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = ${root.i3-label-unfocused-padding}

; Separator in between workspaces
;label-separator = |
label-separator-padding = 1
label-separator-foreground = ${root.foreground}

[module/mpd]
type = internal/mpd
